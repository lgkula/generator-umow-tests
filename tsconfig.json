{
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "module": "ESNext",
        "moduleResolution": "node",
        "noEmit": true,
        "outDir": "./test-results/",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2021"
    },
    "exclude": ["node_modules"]
}
